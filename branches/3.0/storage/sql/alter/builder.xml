  <cls:classes>
    <cls:base>\sylma\storage\sql</cls:base>
    <cls:class alias="elemented" name="schema\Handler">
      <cls:classes>
        <component>
          <cls:classes>
            <cls:base>\sylma\storage\sql\alter\component</cls:base>
            <cls:class alias="table" name="Table"/>
