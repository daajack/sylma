<?xml version="1.0" encoding="utf-8"?>
<le:action xmlns:le="http://www.sylma.org/execution" xmlns:li="http://www.sylma.org/interface" xmlns="http://www.w3.org/1999/xhtml" xmlns:usr="http://www.sylma.org/modules/users" xmlns:dbx="http://www.sylma.org/modules/dbx" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
  <le:settings>
    <le:name>Connexion</le:name>
    <le:argument format="php-string" enum="add,add-do" required="false">
      <le:default replace="true">add</le:default>
    </le:argument>
  </le:settings>
  <le:action le:set-variable="interface" path="interface" return="false">
    <le:directory/>
    <le:file path="login.xsd"/>
    <le:action path="options">
      <li:add>
        <dbx:path>
          <le:path>
            <li:get-action/>
          </le:path>
        </dbx:path>
        <dbx:add-do-path>
          <le:directory/>
          <le:string>/login-do</le:string>
        </dbx:add-do-path>
        <dbx:template-form>
          <le:file path="login-ext.xsl"/>
        </dbx:template-form>
      </li:add>
    </le:action>
    <li:connection>
      <le:redirect return="true"/>
    </li:connection>
  </le:action>
  <le:window>
    <li:add-css le:format="string">
      <le:directory/>
      <le:argument>/login.css</le:argument>
    </li:add-css>
  </le:window>
</le:action>
