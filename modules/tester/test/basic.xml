  <tst:description>Basic</tst:description>

  <tst:test name="Simple">
    <tst:document>
      <tst:test name="Simple">
        <tst:prepare>

        </tst:prepare>
        <tst:expected>

          return true;

        </tst:expected>
      </tst:test>
    </tst:document>
    <tst:expected>

      $result = $manager->read('result', false);
