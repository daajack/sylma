<?xml version="1.0" encoding="utf-8"?>
<le:action xmlns:le="http://www.sylma.org/parser/action" xmlns="http://www.w3.org/1999/xhtml" interface="document">
  <le:settings>
    <le:name>Sylma Backend</le:name>
    <le:text set-variable="title">No title</le:text>
    <le:argument name="action" format="\sylma\dom\document"/>
  </le:settings>
  <html>
    <head>
      <title>
        <le:get-variable name="title"/>
      </title>
      <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
      <link rel="stylesheet" type="text/css" media="all" href="/sylma/modules/html/reset.css"/>
      <link rel="stylesheet" type="text/css" media="all" href="/sylma/modules/html/backend.css"/>
    </head>
    <body>
      <div id="container">
        <div id="header">
          <h1>
            <a lang="en" id="header-title" class="notranslate" href="/">Sylma</a>
          </h1>
        </div>
        <div id="center" class="clearfix">
          <div id="menus">
            <ul>
              <li>
                <a href="/">Accueil</a>
              </li>
            </ul>
          </div>
          <div id="content">
            <le:get-argument name="action"/>
          </div>
        </div>
        <div id="footer"><a href="http://www.sylma.org">Sylma</a> XML Framework</div>
      </div>
    </body>
  </html>
</le:action>
