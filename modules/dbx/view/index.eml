<?xml version="1.0" encoding="utf-8"?>
<le:action xmlns:le="http://www.sylma.org/execution" xmlns:li="http://www.sylma.org/interface" xmlns="http://www.w3.org/1999/xhtml" xmlns:lf="/sylma/processors/form/schema" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
  <le:settings>
    <le:name>Voir</le:name>
    <le:template path="view.xsl" set-variable="template">
      <li:set-parameter>
        <le:argument>directory</le:argument>
        <le:string><le:directory/></le:string>
      </li:set-parameter>
    </le:template>
    <le:argument format="XML_Document" name="model"/>
    <le:argument name="template-extension" required="false" format="XML_Element">
      <le:validate>
        <le:get-variable name="template">
          <li:include-element>
            <le:get-argument name="template-extension"/>
          </li:include-element>
        </le:get-variable>
      </le:validate>
    </le:argument>
  </le:settings>
  <le:window>
    <li:add-css le:format="string">
      <le:directory/>
      <le:string>/index.css</le:string>
    </li:add-css>
  </le:window>
  <le:get-argument name="model">
    <li:parse>
      <le:get-variable name="template"/>
    </li:parse>
  </le:get-argument>
</le:action>
