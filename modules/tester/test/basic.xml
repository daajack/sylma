  <tst:test name="Error">
    <tst:document>
      <tst:test name="Simple">
        <tst:prepare>

        </tst:prepare>
        <tst:expected>

          return false;

        </tst:expected>
      </tst:test>
    </tst:document>
    <tst:expected>

