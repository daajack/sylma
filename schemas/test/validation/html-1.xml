<?xml version="1.0" encoding="utf-8"?>
<tst:validation xmlns:tst="http://www.sylma.org/schemas/test" xmlns="http://www.sylma.org" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <tst:description>An element containing html mixed content</tst:description>
  <tst:schema>
    <xs:element name="typarbeit">
      <xs:complexType mixed="true">
        <xs:sequence>
          <xs:any namespace="http://www.w3.org/1999/xhtml" minOccurs="0" maxOccurs="unbounded" processContents="skip"/>
        </xs:sequence>
      </xs:complexType>
    </xs:element>
  </tst:schema>
  <tst:document expected="true" name="only text">
    <typarbeit>1234</typarbeit>
  </tst:document>
  <tst:document expected="true" name="empty">
    <typarbeit/>
  </tst:document>
  <tst:document expected="true" name="html element with text">
    <typarbeit>
      <html:div>123</html:div>
    </typarbeit>
  </tst:document>
  <tst:document expected="true" name="html element with one html child element">
    <typarbeit>
      <html:div><html:br/></html:div>
    </typarbeit>
  </tst:document>
  <tst:document expected="false" name="one none html element">
    <typarbeit>
      <funktion/>
    </typarbeit>
  </tst:document>
  <tst:document expected="false" name="one pseudo (but none) html element">
    <typarbeit>
      <html:div><br/></html:div>
    </typarbeit>
  </tst:document>
  <tst:document expected="false" name="one html element with one none html element">
    <typarbeit>
      <html:div><funktion/></html:div>
    </typarbeit>
  </tst:document>
</tst:validation>

