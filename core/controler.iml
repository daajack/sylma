<?xml version="1.0" encoding="utf-8"?>
<class xmlns="http://www.sylma.org/interface" xmlns:ls="http://www.sylma.org/security">
  <name>Controler</name>
  <method name="getDirectory" path="get-directory" return-default="true">
    <argument required="false" format="php-string" name="path"/>
  </method>
  <method return-default="true" name="getFile" path="get-file">
    <argument format="php-string" name="path"/>
  </method>
  <method name="getPath" path="get-path" return-default="true"/>
  <method name="browseDirectory" path="browse-directory">
    <argument required="false" format="php-array" name="allowed-ext"/>
    <argument required="false" format="php-array" name="excluded-path"/>
    <argument required="false" name="depth">
      <format>php-integer</format>
      <format>php-null</format>
    </argument>
    <argument required="false" format="php-string" name="original-path"/>
  </method>
  <method return-default="true" path="get-messages" name="getMessages"/>
  <method path="build-specials" name="buildSpecials" ls:owner="root" ls:group="0" ls:mode="700"/>
  <method path="view-infos" return-default="true" name="viewInfos" ls:owner="root" ls:group="0" ls:mode="700"/>
</class>
