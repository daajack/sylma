    <tst:load>

      $manager->setToken('/sylma/storage/sql/test/foreignxml-update-multiple');
      $sID = $manager->readArgument('id');

      return
        array('post' => $manager->createArgument(array(
          'id' => $sID,
          'group' => array(1),
