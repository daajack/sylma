<?xml version="1.0" encoding="utf-8"?>
<controler path-sylma="/sylma" path-config="/config">
  <infos>
    <keywords>keyword1, keyword2</keywords>
    <name>MySite</name>
    <description>It's a beautiful site</description>
    <webmaster href="http://www.example.com">Webmaster</webmaster>
    <language>fr-CH</language>
    <icone>/images/icone.png</icone>
  </infos>
  <module name="explorer">
    <path>/sylma/modules/explorer</path>
  </module>
  <module name="wysiwyg">
    <path>/uploads</path>
  </module>
  <module name="mailer">
    <email>info@example.com</email>
  </module>
  <module name="users" redirect="/sylma">
    <groups path="/sylma/modules/users/default-groups.xml"/>
    <users path="/config/modules/users/default-users.xml"/>
  </module>
  <xquery template="/sylma/modules/xquery/xqueryx.xsl"/>
  <actions>
    <template path="/sylma/action/infos.xsl"/>
    <interfaces path="/sylma/interfaces"/>
    <login>/sylma/modules/users/login</login>
    <galeries path="/galeries/images"/>
  </actions>
  <stylesheet path="/html"/>
  <javascript>
    <lib>/sylma/js</lib>
    <jquery>/sylma/js/jquery.js</jquery>
    <global>/sylma/js/global-0.1.js</global>
    <mootools>/sylma/js/mootools.js</mootools>
    <mootools-more>/sylma/js/mootools-more.js</mootools-more>
  </javascript>
  <explorer path="/modules/explorer"/>
  <editeur path="/modules/editeur"/>
  <window content-type="text/html" name="window">
    <sylma action="/sylma/modules/html/backend" interface="/sylma/interfaces/html_action.iml">
      <extensions>html,htm</extensions>
      <messages>//ns:div[@id="content"]</messages>
    </sylma>
    <html interface="/sylma/interfaces/html_action.iml" action="/html/frontend">
      <extensions>xxx</extensions>
      <messages>//ns:div[@id="content"]</messages>
    </html>
    <redirection>
      <extensions>redirect</extensions>
    </redirection>
    <windowAction javascript="false">
      <extensions>action,popup</extensions>
      <popup>/sylma/modules/html/popup</popup>
    </windowAction>
    <xml>
      <extensions>xml,xsl,cml,sml,eml,iml</extensions>
    </xml>
    <txt ajax="false">
      <extensions>txt,js,css,zip,jar</extensions>
    </txt>
    <img ajax="false">
      <extensions>jpg,jpeg,gif,png</extensions>
    </img>
  </window>
  <messages>
    <allowed path="/sylma/system/allowed-messages.xml"/>
    <template path="/sylma/system/messages.xsl"/>
    <statistic-template path="/sylma/system/stats.xsl"/>
  </messages>
</controler>
