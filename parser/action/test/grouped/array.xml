<?xml version="1.0" encoding="utf-8"?>
<tst:tests xmlns:tst="http://www.sylma.org/parser/action/test/grouped" xmlns="http://www.sylma.org" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:le="http://www.sylma.org/parser/action" xmlns:li="http://www.sylma.org/parser/caller" xmlns:lm="http://www.sylma.org/parser/action/basic">
  <tst:description>Arrays</tst:description>
  <tst:test name="Array">
    <le:action>
      <le:array>
        <le:boolean le:key="a" value="true"/>
        <le:text le:key="b">123</le:text>
        <le:string>hello</le:string>
        <le:null/>
        <le:item>world</le:item>
      </le:array>
    </le:action>
    <tst:expected>
      $aResult = $controler->getResult('array');

      return
        $aResult === array(
          'a' => true,
          'b' => '123',
          'hello',
          null,
          'world',
        );
    </tst:expected>
  </tst:test>
  <tst:test name="Array exception 1" catch="\sylma\core\exception">
    <le:action>
      <le:array>
        abc
        <le:null/>
      </le:array>
    </le:action>
  </tst:test>
  <tst:test name="Add array to element">
    <le:action>
      <div>
        <le:array>
          <le:text>hello</le:text>
          <le:text>world</le:text>
        </le:array>
      </div>
    </le:action>
    <tst:node>
      <div xmlns="http://www.sylma.org">helloworld</div>
    </tst:node>
    <tst:expected>
      $result = $controler->getResult('dom');
      $node = $controler->getArgument('node');

      return
        $controler->compareNodes($result, $node);
    </tst:expected>
  </tst:test>
  <tst:test name="Add array with node to element">
    <le:action>
      <div>
        <le:array>
          <le:document>
            <h1>hello</h1>
          </le:document>
          <le:text>world</le:text>
        </le:array>
      </div>
    </le:action>
    <tst:node>
      <div xmlns="http://www.sylma.org"><h1 xmlns="http://www.sylma.org">hello</h1>world</div>
    </tst:node>
    <tst:expected>
      $result = $controler->getResult('dom');
      $node = $controler->getArgument('node');

      return
        $controler->compareNodes($result, $node);
    </tst:expected>
  </tst:test>
  <tst:test name="Add array of array with node to element">
    <le:action>
      <div>
        <le:array>
          <le:document>
            <h1>hello</h1>
          </le:document>
          <le:array>
            <span>world</span>
            <le:text>abc</le:text>
          </le:array>
        </le:array>
      </div>
    </le:action>
    <tst:node>
      <div xmlns="http://www.sylma.org"><h1 xmlns="http://www.sylma.org">hello</h1><span xmlns="http://www.sylma.org">world</span>abc</div>
    </tst:node>
    <tst:expected>
      $result = $controler->getResult('dom');
      $node = $controler->getArgument('node');

      return
        $controler->compareNodes($result, $node);
    </tst:expected>
  </tst:test>
</tst:tests>