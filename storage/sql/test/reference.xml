      $users = $manager->runQuery("SELECT id,name FROM user7 WHERE `group_id` = $sID", true);

      array_shift($aUsers);

      $manager->assertEquals($group->read('name'), 'group_crud_new');
      $manager->assertEquals($users->query(), $aUsers);

