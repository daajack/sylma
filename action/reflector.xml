<arg:argument
  xmlns:arg="http://2013.sylma.org/core/argument"
  xmlns="http://2013.sylma.org/action"
  xmlns:cls="http://2013.sylma.org/core/factory"
>
  <cls:classes>
    <component>
      <cls:classes>
        <cls:base>\sylma\action\component</cls:base>
        <cls:class alias="directory" name="Directory"/>
        <cls:class alias="path" name="Path">
          <cls:classes>
            <cls:class alias="request" name="\sylma\core\request\Builder"/>
          </cls:classes>
        </cls:class>
        <cls:class alias="script" name="Script">
          <cls:classes>
            <cls:class alias="path" name="\sylma\core\request\Builder"/>
            <cls:class alias="argument" name="\sylma\core\argument\Readable"/>
          </cls:classes>
        </cls:class>
        <cls:class alias="argument" name="Argument"/>
        <cls:class alias="get-argument" name="GetArgument"/>
        <cls:class alias="context" name="Context"/>
        <cls:class alias="file" name="File">
          <cls:classes>
            <cls:class alias="distant" name="\sylma\action\FileDistant"/>
          </cls:classes>
        </cls:class>
        <cls:class alias="string" name="_String"/>
        <cls:class alias="array" name="_Array"/>
        <cls:class alias="boolean" name="_Boolean"/>
        <cls:class alias="object" name="_Object"/>
        <cls:class alias="manager" name="Manager"/>
      </cls:classes>
    </component>
  </cls:classes>
</arg:argument>
