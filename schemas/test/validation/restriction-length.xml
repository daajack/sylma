<?xml version="1.0" encoding="utf-8"?>
<tst:validation xmlns:tst="http://www.sylma.org/schemas/test" xmlns="http://www.sylma.org" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <tst:description>A simple string type element with a max length</tst:description>
  <tst:schema>
    <xs:element name="funktion">
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:maxLength value="5"/>
        </xs:restriction>
      </xs:simpleType>
    </xs:element>
  </tst:schema>
  <tst:document expected="true" name="string shorter">
    <funktion>1234</funktion>
  </tst:document>
  <tst:document expected="true" name="empty">
    <funktion/>
  </tst:document>
  <tst:document expected="false" name="string too long">
    <funktion>123456</funktion>
  </tst:document>
  <tst:document expected="false" name="complex element">
    <funktion>
      <title></title>
    </funktion>
  </tst:document>
</tst:validation>
