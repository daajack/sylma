<?xml version="1.0" encoding="utf-8"?>
<le:action xmlns:le="http://www.sylma.org/execution" xmlns:li="http://www.sylma.org/interface" xmlns="http://www.w3.org/1999/xhtml" xmlns:lf="/sylma/processors/form/schema" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:la="http://www.sylma.org/processors/action-builder">
  <le:settings>
    <le:name>Visualiser l'upload</le:name>
    <le:processor path="/sylma/processors/action-builder" namespace="http://www.sylma.org/processors/action-builder"/>
    <le:argument format="php-string" name="title"/>
    <le:argument format="php-string" name="name"/>
    <le:argument format="XML_Element" name="file">
      <le:validate return="true">
        <le:document set-variable="test">
          <le:get-argument name="file"/>
        </le:document>
      </le:validate>
    </le:argument>
  </le:settings>
  <le:recall>
    <le:template path="upload-view.xsl">
      <li:set-parameter>
        <le:argument>title</le:argument>
        <le:get-argument name="title"/>
      </li:set-parameter>
      <li:set-parameter>
        <le:argument>name</le:argument>
        <le:get-argument name="name"/>
      </li:set-parameter>
      <li:parse>
        <le:get-argument name="file"/>
      </li:parse>
    </le:template>
  </le:recall>
</le:action>
