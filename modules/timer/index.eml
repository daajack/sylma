<?xml version="1.0" encoding="utf-8"?>
<le:action xmlns:le="http://www.sylma.org/execution" xmlns:li="http://www.sylma.org/interface" xmlns="http://www.w3.org/1999/xhtml">
  <le:settings>
    <le:name>Timer</le:name>
    <le:argument format="php-string" name="path"/>
    <le:action path="interface" set-variable="timer"/>
  </le:settings>
  <le:action return="false" set-variable="action">
    <le:get-argument name="path"/>
  </le:action>
  <le:window>
    <li:add-css le:format="string">
      <le:directory/>
      <le:argument>/index.css</le:argument>
    </li:add-css>
  </le:window>
  <div class="sylma-timer clearfix">
    <le:document>
      <le:get-variable name="timer"/>
      <li:parse>
        <le:template path="index.xsl"/>
      </li:parse>
    </le:document>
  </div>
  <le:get-variable name="action"/>
</le:action>
