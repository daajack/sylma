        <tpl:template match="*">
          <first>
            <tpl:read/>
          </first>
        </tpl:template>
        <tpl:template match="*">
          <second>
            <tpl:read/>
          </second>
        </tpl:template>
      </view:view>
    </tst:document>
    <tst:node>
      <div>
        <second>2</second>
