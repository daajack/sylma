>
  <tst:description>Basic</tst:description>
  <tst:test name="Read tester01">
    <tst:prepare>
      $manager->readScript('samples/read.vml', 'tester01');
    </tst:prepare>
    <tst:node>
      <div>
        <h1>hello</h1>
        <h2 id="test">hello</h2>
        <h3>hello</h3>
        <h6>hello</h6>
        <span>world</span>
      </div>
    </tst:node>
  </tst:test>
