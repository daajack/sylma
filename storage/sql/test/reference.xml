    <tst:load>

      $sID = $manager->read('idref');

      $aUsers = array(
        array(
          'id' => - $manager->read('user1'),
        ),
        array(
          'id' => $manager->read('user2'),
          'name' => 'test_ref2c',
          'email' => 'test_ref2c@sylma.org',
