<arg:argument
  xmlns:arg="http://2013.sylma.org/core/argument"
  xmlns="http://2013.sylma.org/parser/action"
  xmlns:cls="http://2013.sylma.org/core/factory"
  xmlns:build="http://2013.sylma.org/parser/reflector/builder"

  build:target="[current()]"
>
  <debug>
    <show>0</show>
    <run>1</run>
    <update>0</update>
  </debug>
  <cache>
    <elements>
      <directory>getDirectory</directory>
      <file>getFile</file>
      <document>getDocument</document>
      <template>getTemplate</template>
      <argument>createArgument</argument>
      <manager>getManager</manager>
    </elements>
    <namespace>http://www.sylma.org/parser/action/basic</namespace>
    <class>\sylma\parser\action\cached\Document</class>
  </cache>
  <template>
    <indent>0</indent>
  </template>
  <php>
    <arg:import static="static">/#sylma/parser/languages/php/window.xml</arg:import>
  </php>
  <cls:classes>
    <cls:base>\sylma\parser\action</cls:base>
    <cls:class alias="window" name="compiler\Window"/>
    <cls:class alias="cached" name="cached\Document"/>
    <cls:class alias="compiler" name="compiler\Main"/>
    <cls:class alias="reflector" name="compiler\Reflector"/>
    <cls:class alias="document" name="\sylma\dom\basic\handler\Rooted"/>
    <cls:class alias="path" name="\sylma\core\request\Basic"/>
    <cls:class alias="request" name="\sylma\core\request\Builder"/>
    <cls:class alias="context" name="\sylma\modules\html\context\Basic"/>
  </cls:classes>   
</arg:argument>
