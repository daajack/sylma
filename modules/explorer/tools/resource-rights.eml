<?xml version="1.0" encoding="utf-8"?>
<le:action xmlns:le="http://www.sylma.org/execution" xmlns:li="http://www.sylma.org/interface" xmlns="http://www.w3.org/1999/xhtml" xmlns:la="http://www.sylma.org/processors/action-builder">
  <le:settings>
    <le:name>Outils des droits</le:name>
  </le:settings>
  <la:object class="menu" name="rights">
    <form class="sylma-tools" id="resource-tools-rights">
      <la:event name="submit"><![CDATA[return %ref-object%.parentObject.updateRights();]]></la:event>
      <div class="clearfix">
        <label for="resource-owner">Owner :</label>
        <input type="text" name="resource-owner" id="resource-owner"/>
      </div>
      <div class="clearfix">
        <label for="resource-group">Group :</label>
        <input type="text" name="resource-group" id="resource-group"/>
      </div>
      <table>
        <thead>
          <tr>
            <th>
              <span>*</span>
              <la:event name="click"><![CDATA[return sylma.explorer.tools.invertRights();]]></la:event>
            </th>
            <th>
              <span>O</span>
              <la:event name="click"><![CDATA[return sylma.explorer.tools.invertRights('name^=resource-owner');]]></la:event>
            </th>
            <th>
              <span>G</span>
              <la:event name="click"><![CDATA[return sylma.explorer.tools.invertRights('name^=resource-group');]]></la:event>
            </th>
            <th>
              <span>P</span>
              <la:event name="click"><![CDATA[return sylma.explorer.tools.invertRights('name^=resource-public');]]></la:event>
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>
              <span>R</span>
              <la:event name="click"><![CDATA[return sylma.explorer.tools.invertRights('name$=read');]]></la:event>
            </th>
            <td>
              <input type="checkbox" name="resource-owner-read"/>
            </td>
            <td>
              <input type="checkbox" name="resource-group-read"/>
            </td>
            <td>
              <input type="checkbox" name="resource-public-read"/>
            </td>
          </tr>
          <tr>
            <th>
              <span>W</span>
              <la:event name="click"><![CDATA[return sylma.explorer.tools.invertRights('name$=write');]]></la:event>
            </th>
            <td>
              <input type="checkbox" name="resource-owner-write"/>
            </td>
            <td>
              <input type="checkbox" name="resource-group-write"/>
            </td>
            <td>
              <input type="checkbox" name="resource-public-write"/>
            </td>
          </tr>
          <tr>
            <th>
              <span>X</span>
              <la:event name="click"><![CDATA[return sylma.explorer.tools.invertRights('name$=execution');]]></la:event>
            </th>
            <td>
              <input type="checkbox" name="resource-owner-execution"/>
            </td>
            <td>
              <input type="checkbox" name="resource-group-execution"/>
            </td>
            <td>
              <input type="checkbox" name="resource-public-execution"/>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="center">
        <input type="submit" value="Ok"/>
        <input type="button" value="Annuler">
          <la:event name="click"><![CDATA[return %ref-object%.hide();]]></la:event>
        </input>
      </div>
    </form>
  </la:object>
</le:action>
