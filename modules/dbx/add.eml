<?xml version="1.0" encoding="utf-8"?>
<le:action xmlns:le="http://www.sylma.org/execution" xmlns:li="http://www.sylma.org/interface" xmlns="http://www.w3.org/1999/xhtml" xmlns:lf="/sylma/processors/form/schema" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:la="http://www.sylma.org/processors/action-builder">
  <le:settings>
    <le:name>Ajouter</le:name>
    <le:processor path="/sylma/processors/action-builder" namespace="http://www.sylma.org/processors/action-builder"/>
    <le:argument format="php-string" name="name"/>
    <le:argument format="php-string" name="path"/>
    <le:argument format="XML_Document" name="schema"/>
    <le:argument format="XML_Element" name="element"/>
  </le:settings>
  <le:recall>
    <le:document>
      <le:get-argument name="element"/>
      <li:get-model le:set-variable="model">
        <le:get-argument name="schema"/>
        <le:array>
          <le:get-argument name="path" le:key="path"/>
          <le:boolean le:key="messages">true</le:boolean>
          <le:boolean le:key="model">true</le:boolean>
          <le:boolean le:key="load-refs">true</le:boolean>
        </le:array>
        <li:parse>
          <le:template path="form-field.xsl">
            <li:set-parameter>
              <le:argument>element-name</le:argument>
              <le:get-argument name="name"/>
            </li:set-parameter>
          </le:template>
        </li:parse>
      </li:get-model>
    </le:document>
  </le:recall>
</le:action>
